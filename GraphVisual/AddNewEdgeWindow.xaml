<Window x:Class="GraphVisual.AddNewEdgeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphVisual"
        mc:Ignorable="d"
        Title="Тип Ребра" Height="149" Width="191.001">
    <Grid Margin="0,0,4,0">
        <Label Content="Введите расстояние:" HorizontalAlignment="Left" Margin="2,5,0,0" VerticalAlignment="Top"/>
        <TextBox Name="DistanceTextBox" HorizontalAlignment="Left" Height="15" Margin="124,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TextChanged="TextBox_TextChanged"/>
        <Label Content="Тип ребра:" HorizontalAlignment="Left" Margin="3,24,0,0" VerticalAlignment="Top"/>
        <RadioButton Name ="OrientedEdgeRadioButton" Content="Ориентрированное" HorizontalAlignment="Left" Margin="7,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,0.6"/>
        <RadioButton Content="Неориентированное" HorizontalAlignment="Left" Margin="7,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,0.6" Checked="RadioButton_Checked"/>
        <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="8,91,0,0" VerticalAlignment="Top" Width="166"/>

    </Grid>
</Window>
